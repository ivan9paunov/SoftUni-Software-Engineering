<div class="register-box">
    <h1>Register</h1>
    <form method="POST">
        <label>Username</label>
        <input type="text" placeholder="Username.." name="username" {{#if data.username}}value="{{data.username}}{{/if}}" >
        <label>Email</label>
        <input type="text" placeholder="Email.." name="email" {{#if data.email}}value="{{data.email}}{{/if}}" >
        <label>Password</label>
        <input type="password" placeholder="Password.." name="password">
        <label>Confirm Password</label>
        <input type="password" placeholder="Confirm Password.." name="repass">
        <input type="submit" value="Submit">
    </form>
    <p>Already have an account? <a href="/login">Login here</a></p>
</div>