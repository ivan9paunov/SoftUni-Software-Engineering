{{#with movie}}
<section id="details-page">

    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">

                <h1>{{title}}</h1>
                <div class="card-movie">
                    <div class="first-info">
                        <p class="card-genre">Genre: {{genre}}</p>
                        <p class="card-director">Directror: {{director}}</p>
                    </div>
                    <div class="second-info">
                        <p class="card-year">Year: {{year}}</p>
                        <p class="card-ranking">Rating: <span id="stars">{{{starRating}}}</span></p>
                    </div>

                </div>

                <p class="disc">Description: {{description}}</p>
            </div>
        </div>
        <div class="card_right">
            <img src="{{imageURL}}" alt="image">
        </div>
    </div>

    <div class="main-cast-card">
        <div class="cast-card">
            <div class="card-img">
                <img src="https://images.toofab.com/image/4e/1by1/2022/11/08/4ea2669b9964450bb8d3e28d5bff9a1f_xl.jpg"
                    alt="cast">
            </div>
            <div class="cast-info">
                <h1>Halle Bailey</h1>
                <h3>Age: 23</h3>
                <h3>Born: Atlanta, Georgia, United States</h3>
                <h3>Name in Movie: Ariel</h3>
            </div>
        </div>
        <div class="cast-card">
            <div class="card-img">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcREoIKQIGtYhC0ufGFsJQl6TcR1VMdhjq1A9g&usqp=CAU"
                    alt="cast">
            </div>
            <div class="cast-info">
                <h1>Jonah Hauer-King</h1>
                <h3>Age: 28</h3>
                <h3>Born: London, England, UK</h3>
                <h3>Name in Movie: Eric</h3>
            </div>
        </div>
    </div>
    </div>

</section>
{{/with}}